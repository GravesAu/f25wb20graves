extends layout

block content
  h1 Grid Display
  p Rows: #{query.rows}
  p Columns: #{query.cols}
  - const rows = Number(query.rows)
  - const cols = Number(query.cols)
  if !Number.isInteger(rows) || !Number.isInteger(cols)
    p One or both values are not integers. Please provide whole numbers for rows and columns.
  else if rows < 3 || rows > 13
    p The number of rows (#{rows}) must be between 3 and 13.
  else if cols < 3 || cols > 13
    p The number of columns (#{cols}) must be between 3 and 13.
  else
    table#outer(border='1')
      - for (let i = 0; i < rows; i++) {
        tr#middle
          - for (let j = 0; j < cols; j++) {
            td= i + 2 * j
          - }
      - }
